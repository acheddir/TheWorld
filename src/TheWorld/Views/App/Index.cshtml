@model IEnumerable<TheWorld.Models.Trip>
@{
    ViewBag.Title = "Home Page";
}
@section scripts {
    <script>
        $(document).ready(function () {
            $(".nav li").removeClass("active");
            $('#nav-home').addClass('active');
        });
    </script>
}

<div class="row">

    <div class="col-md-12">
        <h1>Welcome to The World</h1>
        <p>This app will allow you to plan for world trips</p>
        <a asp-controller="App" asp-action="Trips" class="btn btn-lg btn-success">Manage My Trips</a>
    </div>

</div>