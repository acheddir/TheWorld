@model TheWorld.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact Us";
}
@section scripts {
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript" src="~/lib/insertionQuery/insQ.min.js"></script>
    <script>
        $(document).ready(function() {
            $(".nav li").removeClass("active");
            $('#nav-contact').addClass('active');
        });
    </script>
    <script>
            insertionQ('#Name-error, #Email-error, #Message-error').every(function (element) {
                var $element = $(element);
                var errMsg = $element.html();
                $element.html('<i class="fa fa-warning"></i> ' + errMsg);
            });
    </script>
	@if (ViewBag.MessageSuccess != null)
    {
        <script type="text/javascript">
            eval(swal('@ViewBag.MessageSuccess', 'Success', 'success'));
        </script>
    }
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2 class="text-center">Contact</h2>

        <form method="post">

            <div class="note note-danger validation-summary" asp-validation-summary="ValidationSummary.ModelOnly"></div>

            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><label asp-for="Name">Name</label></td>
                        <td><span asp-validation-for="Name" class="text-warning text-muted pull-right" style="font-size: 11px;"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="text" asp-for="Name" class="form-control" /></td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><label asp-for="Email">Email</label></td>
                        <td><span asp-validation-for="Email" class="text-warning text-muted pull-right" style="font-size: 11px;"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="email" asp-for="Email" class="form-control"/></td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><label asp-for="Message">Message</label></td>
                        <td><span asp-validation-for="Message" class="text-warning text-muted pull-right" style="font-size: 11px;"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2"><textarea cols="40" rows="4" asp-for="Message" class="form-control"></textarea></td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Send Message" class="btn btn-success"/>
            </div>

        </form>
    </div>
</div>