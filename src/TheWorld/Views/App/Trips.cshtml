@{
    ViewBag.Title = "Home Page";
}
@section styles {
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" />
}
@section scripts{
    <script type="text/javascript" src="~/lib/underscore/underscore-min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/lib/angular/angular.min.js"></script>
    <script type="text/javascript" src="~/lib/angular-route/angular-route.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript" src="~/lib/gmaps/gmaps.min.js"></script>
    <script type="text/javascript" src="~/lib/travelmap/travelmap.min.js"></script>
    
    <environment names="Development">
        <script type="text/javascript" src="~/js/simpleControls.js"></script>
        <script type="text/javascript" src="~/js/app-trips.js"></script>
        <script type="text/javascript" src="~/js/tripsController.js"></script>
        <script type="text/javascript" src="~/js/tripEditorController.js"></script>
    </environment>
    <environment names="Production,Staging">
        <script type="text/javascript" src="~/lib/_app/simpleControls.js"></script>
        <script type="text/javascript" src="~/lib/_app/app-trips.js"></script>
        <script type="text/javascript" src="~/lib/_app/tripsController.js"></script>
        <script type="text/javascript" src="~/lib/_app/tripEditorController.js"></script>
    </environment>
    
    <script>
        $(document).ready(function () {
            $(".nav li").removeClass("active");
            $('#nav-trips').addClass('active');
            $('.datapicker').datepicker({
                format: "mm/dd/yyyy"
            });
        });
    </script>
}

<div class="row no-gutter" ng-app="app-trips">

    <div ng-view></div>
    
</div>