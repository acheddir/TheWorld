@model TheWorld.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@section scripts {
    <script type="text/javascript" src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/lib/insertionQuery/insQ.min.js"></script>
    <script>
            insertionQ('#Username-error, #Email-error, #PhoneNumber-error, #Pwd-error').every(function (element) {
                var $element = $(element);
                var errMsg = $element.html();
                $element.html('<i class="fa fa-warning"></i> ' + errMsg);
            });
    </script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center">Register</h3>
        <form method="POST" novalidate>
            <div class="note note-danger validation-summary" asp-validation-summary="ValidationSummary.ModelOnly"></div>
            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><label asp-for="Username"></label></td>
                        <td><span asp-validation-for="Username" class="text-warning text-muted pull-right" style="font-size: 11px;"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input asp-for="Username" class="form-control" /></td>
                    </tr>
                </table>
            </div>
            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><label asp-for="Email"></label></td>
                        <td><span asp-validation-for="Email" class="text-warning text-muted pull-right" style="font-size: 11px;"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input asp-for="Email" class="form-control"/></td>
                    </tr>
                </table>
            </div>
            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><label asp-for="PhoneNumber"></label></td>
                        <td><span asp-validation-for="PhoneNumber" class="text-warning text-muted pull-right" style="font-size: 11px;"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input asp-for="PhoneNumber" class="form-control"/></td>
                    </tr>
                </table>
            </div>
            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><label asp-for="Pwd"></label></td>
                        <td><span asp-validation-for="Pwd" class="text-warning text-muted pull-right" style="font-size: 11px;"></span></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="password" asp-for="Pwd" class="form-control"/></td>
                    </tr>
                </table>
            </div>
            <div class="form-group">
                <table class="table borderless nospace">
                    <tr>
                        <td><input type="submit" value="Register" class="btn btn-success"/></td>
                        <td>
                            <span class="pull-right">
                                Already have an account?
                                <a asp-controller="Auth" asp-action="Login">Login</a>
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </form>
    </div>
</div>